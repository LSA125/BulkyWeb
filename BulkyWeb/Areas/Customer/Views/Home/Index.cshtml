@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.CoverImageUrl" class="card-img-top rounded" alt="@product.Title">
                        <div class="card-body d-flex flex-column align-content-center">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center text-nowrap mb-0">@product.Title</p>
                            <p class="card-text text-center text-secondary mb-2">by @product.Author</p>
                            <p class="card-text text-center text-dark h5 font-weight-bold">
                                <span class="text-decoration-line-through">@product.Price.ToString("C")</span>
                            </p>
                            <p class="card-text text-center text-secondary h6">As low as
                                <strong class="text-primary h5">@product.Price100.ToString("C")</strong>
                            </p>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-block">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>