@page
@model BulkyWebRzor_Temp.Pages.Categories.EditModel

<form method="post">
    <input asp-for="category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pt-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="category.Name"></label>
            <input asp-for="category.Name" class="form-control" />
            <span asp-validation-for="category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="category.DisplayOrder"></label>
            <input asp-for="category.DisplayOrder" class="form-control" />
            <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mb-1 row">
            <button type="submit" class="btn btn-primary mx-1 col col-md-3">Update</button>
            <a asp-page="/Category/Index" class="btn btn-secondary col col-md-3 mx-1 btn-outline-secondary">Back to List</a>
        </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
